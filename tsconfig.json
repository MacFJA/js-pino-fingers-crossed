{
	"compilerOptions": {
		"target": "es2016",
		"module": "ES6",
		"moduleResolution": "Node",
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationDir": "./src",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./src/index.js"],
	"exclude": ["./node_modules"]
}
